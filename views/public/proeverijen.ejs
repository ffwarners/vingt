<section id="services" class="service-item">
    <div class="container">
        <div class="center wow fadeInDown">
            <h2>Proeverijen</h2>
            <h3 class="white">Aankomende proeverijen</h3>
            <small class="white pull-left">*klik op een proeverij om naar het aanmeldscherm te gaan*</small>
            <a href="/sign-out" class="pull-right pointer">Al aangemeld? Klik hier om je af te melden</a><br>
        </div>


        <div class="row">
            <% var image = 1;%>
            <% proeverijen.forEach(function(proeverij) { %>
            <% if (proeverij.shown == "true") { %>
            <a href="/registration?<%=proeverij.id%>">
                <div class="col-sm-6 col-md-4 pointer">
                    <div class="media services-wrap wow fadeInDown">
                        <div class="pull-left">
                            <img class="img-responsive" src="images/services/services<%= image %>.png">
                        </div>
                        <div class="media-body">
                            <h3 class="media-heading"><%= proeverij.name.substring(0,15); %><% if(proeverij.name.length > 15) {%>...<%}%></h3>
                            <% var date = proeverij.date
                                var year = date.substring(0, 4);
                                var month = date.substring(5, 7);
                                var day = date.substring(8, 10);
                                var newDate = day + "-" + month + "-" + year; %>
                            <p id="">Datum: <%= newDate %><br>
                                <%= proeverij.details.substring(0,20); %><% if(proeverij.details.length > 20) {%>...<%}%></p>
                        </div>
                    </div>
                </div>
            </a>
            <% image++; if(image>6) image = 1;%>
            <% }}); %>
        </div><!--/.row-->
    </div><!--/.container-->
</section><!--/#services-->

