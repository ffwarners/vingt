<section id="blog" class="container" style="margin-top: 140px">
    <div class="center">
        <h2><%= blog[0].proeverijName %></h2>
        <p class="lead">Door: <%= blog[0].personName %></p>
    </div>


    <div class="blog">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-item">
                    <div class="row">
                        <div class="col-xs-12 col-sm-10 blog-content">
                            <h2><a>Proeverij: <%= blog[0].proeverijName %></a></h2>
                            <h4><strong>Beschrijving proeverij: <br></strong><%= blog[0].proeverijBeschrijving %>
                            </h4>
                            <% var date = blog[0].proeverijDate
                            var year = date.substring(0, 4);
                            var month = date.substring(5, 7);
                            var day = date.substring(8, 10);
                            var newDate = day + "-" + month + "-" + year; %>
                            <h4><strong>Datum proeverij: </strong><%= newDate %></h4>
                            <h4><strong>Datum reactie: </strong><%= blog[0].reactionDate %></h4>
                            <h4><strong>Reactie: </strong><br><%= blog[0].reaction %></h4>
                            <h4><strong>Rating (<%= blog[0].rate %>/5): </strong></h4>
                            <% for(var i = 0; i < blog[0].rate; i++) { %>
                            <span><a><i class="fa fa-star"></i></a></span>
                            <% } %>
                        </div>
                    </div>
                </div><!--/.blog-item-->
            </div>

            <aside class="col-md-4">
                <div class="widget search">
                    <form role="form">
                        <input type="text" class="form-control search_box" autocomplete="off" placeholder="Search Here">
                    </form>
                </div><!--/.search-->

                <div class="widget categories">
                    <h3>Recente blogs</h3>
                    <div class="row">
                        <div class="col-sm-12">
                            <%var max = 3;
                            if (blogs.length<=4) max = blogs.length-1;%>
                            <% function contains(a, obj) {
                                for (var i = 0; i < a.length; i++) {
                                    if (a[i] === obj) {
                                        return true;
                                    }
                                }
                                return false;
                            } %>
                            <% var array = [max+1] %>
                            <% for (var j = 0; j < max; j++) { %>
                            <% var random = Math.floor((Math.random() * blogs.length - 1) + 1); %>
                            <% if (random == 0) random++; %>
                            <% while (contains(array, random)) {
                                random = Math.floor((Math.random() * blogs.length - 1) + 1);
                                if (random == 0) random++;
                            } array.push(random); %>

                            <div class="single_comments pointer" onclick="location.href='/blog-?<%= blogs[random].link %>'">
                                <img src="images/blog/avatar3.png" alt=""/>
                                <% var name3 = blogs[random].personName %>
                                <% name3.length >= 10 ? name3 = name3.substring(0, 10) + "..." : name3; %>
                                <p><%= blogs[random].reaction.substring(0, 75) + "..." %></p>
                                <div class="entry-meta small muted">
                                    <span>Door <a href="#"><%= name3 %></a></span><span>Bij <a
                                                href="#"><%=blogs[random].proeverijName.substring(0,15) + "..."%></a></span>
                                </div>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div><!--/.recent comments-->
            </aside>
        </div><!--/.row-->
    </div>
</section><!--/#blog-->

