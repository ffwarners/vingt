<section id="feature">
    <div class="container">
        <div class="center wow fadeInDown" style="margin-top: 70px;">
            <h2><%= wine.naam %></h2>
            <p class="lead">Hieronder vindt u alle informatie over <strong><i><%= wine.naam%></i></strong>.</p>
        </div>

        <div class="row">
            <div class="features">
                <div class="row">
                    <div class="modal-body row center wow fadeInDownBig">
                        <div class="col-md-6">
                            <img src="/images/wines/wine<%= wine.wine_id %>.jpg"/>
                        </div>
                        <div class="col-md-6 table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                <td></td>
                                <td><strong><%= wine.naam %></strong></td>
                                </thead>
                                <tbody>
                                <% columns.forEach(function(column) { %>
                                <% if (column.Field != "wine_id" && column.Field != "imageExt") { %>
                                <tr>
                                    <td><%= column.Field %></td>
                                    <td><%= wine[column.Field] %></td>
                                </tr>
                                <% }}); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div><!--/.services-->
        </div><!--/.row-->
    </div><!--/.container-->
</section><!--/#feature-->

